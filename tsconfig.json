{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "rootDirs": ["./src"],
    "strict": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "module": "CommonJS",
    "target": "es5",
    "jsx": "react",
    "allowJs": true
  },
  "exclude": ["dist/*/**",
    "node_modules/@types/**/*.d.ts"]
}
